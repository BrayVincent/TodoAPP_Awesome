{% extends 'base.html.twig' %}

{% block title %}Liste des tâches{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.21/datatables.min.css"/>
{% endblock %}

{% block body %}



        <div class="container">
            <h1>Todo App</h1>
            </br>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            </br>

            <a href='{{ path("user_create") }}' class="btn btn-primary">Ajouter un utilisateur</a>
            </br></br>
            <table class="table table-striped tabled-bordered" id="usersTable">
                <thead>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Mot de passe</th>
                    <th></th>
                    <th></th>

                </thead>
                <tbody>
                    {% if users is defined %}
                        {% for user in users %}
                            <tr>
                            <th scope="row"> {{ user.id }} </th>
                            <td> {{ user.email }} </td>
                            <td> {{ user.password }} </td>
                            <td> <a href='{{ path("update_user", {'id': user.id}) }}' class="btn btn-success">Réinitialiser</a> </td>
                            <td> <a href='{{ path("user_delete", {'id': user.id}) }}' class="btn btn-danger">Supprimer</a> </td>

                            </tr>
                        {% endfor %}
                    {% endif %}
                </tbody>
            </table>
        </div>


{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.21/datatables.min.js"></script>


    <script>
        $(document).ready( function () {
            $('#usersTable').DataTable();
        } );


    </script>

{% endblock %}